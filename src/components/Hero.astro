---
// Hero section component
const title = import.meta.env.PUBLIC_TITLE;
const description = import.meta.env.PUBLIC_DESCRIPTION;
const subtitle = import.meta.env.PUBLIC_SUBTITLE;
const hero_video = import.meta.env.PUBLIC_HERO_VIDEO;
---

<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    {
      hero_video ? (
        <video 
          src={hero_video} 
          class="w-full h-full object-cover"
          autoplay
          muted
          loop
        />
      ) : (
        <img 
          src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
          alt="Interior del restaurante"
          class="w-full h-full object-cover"
        />
      )
    }
    <img 
      src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
      alt="Interior del restaurante"
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/20"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center text-white px-4 max-w-4xl mx-auto">
    <h1 class="font-display text-5xl md:text-7xl font-bold mb-6 leading-tight resero">
      {title}
      {
        subtitle && (
          <span class="text-primary-400 block">{subtitle}</span>
        )
      }
    </h1>
    
    <p class="text-xl md:text-2xl mb-8 text-gray-200 max-w-2xl mx-auto leading-relaxed">
      {
        description && (
          <p class="text-xl md:text-2xl mb-8 text-gray-200 max-w-2xl mx-auto leading-relaxed">
            {description}
          </p>
        )
      }
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a 
        href="#menu" 
        class="bg-primary-500 hover:bg-primary-600 text-white px-8 py-4 rounded-full text-lg font-medium transition-all duration-300 hover:scale-105 shadow-lg"
      >
        Ver Nuestro Men√∫
      </a>
      <!-- <a 
        href="#contact" 
        class="border-2 border-white text-white hover:bg-white hover:text-secondary-800 px-8 py-4 rounded-full text-lg font-medium transition-all duration-300 hover:scale-105"
      >
        Reservar Mesa
      </a> -->
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
    <a href="#amenities" class="text-white hover:text-primary-400 transition-colors duration-300">
      <i class="fas fa-chevron-down text-2xl animate-bounce"></i>
    </a>
  </div>
</section>


<!-- Custom Styles -->
<style>
  .resero {
    font-family: 'Baloo 2', sans-serif !important;
    font-size: 80px !important;
    color: #fbb03b !important; /* Amarillo aproximado */
    margin: 0 !important;
    letter-spacing: -5px; /* Ajuste de espacio entre letras */
  }
</style>