---
const instagramUrl = import.meta.env.PUBLIC_INSTAGRAM_URL;
const facebookUrl = import.meta.env.PUBLIC_FACEBOOK_URL;
const twitterUrl = import.meta.env.PUBLIC_TWITTER_URL;
const name = import.meta.env.PUBLIC_NAME;
const address = import.meta.env.PUBLIC_ADDRESS;
const phone = import.meta.env.PUBLIC_PHONE;
const email = import.meta.env.PUBLIC_EMAIL;
const logo = import.meta.env.PUBLIC_LOGO;
const week_hours_1 = import.meta.env.PUBLIC_WEEK_HOURS_1;
const week_hours_2 = import.meta.env.PUBLIC_WEEK_HOURS_2;
const weekend_hours_1 = import.meta.env.PUBLIC_WEEKEND_HOURS_1;
const weekend_hours_2 = import.meta.env.PUBLIC_WEEKEND_HOURS_2;

// Footer component
---

<footer class="bg-secondary-800 text-white py-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <!-- Restaurant Info -->
      <div>
        <div class="flex items-center mb-6">
          <div class="text-white px-4 py-2 rounded-lg font-display font-bold text-xl mr-3">
            {
              logo && (
                <img src={logo} alt="Logo" class="w-10 h-10" />
              )
            }
          </div>
          <span class="font-display text-2xl font-bold">{name}</span>
        </div>
        <p class="text-secondary-300 mb-6 leading-relaxed">
          Experiencia culinaria extraordinaria con los mejores sabores y un ambiente único que te hará vivir momentos inolvidables.
        </p>
        <div class="flex space-x-4">
          {
            facebookUrl && (
              <a 
                href={facebookUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-secondary-700 hover:bg-primary-500 w-12 h-12 rounded-full transition-colors duration-300 flex items-center justify-center"
              >
                <i class="fab fa-facebook-f"></i>
              </a>
            )
          }
          <a 
            href={instagramUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-secondary-700 hover:bg-primary-500 w-12 h-12 rounded-full transition-colors duration-300 flex items-center justify-center"
          >
            <i class="fab fa-instagram"></i>
          </a>
          {
            twitterUrl && (
              <a
                href={twitterUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-secondary-700 hover:bg-primary-500 w-12 h-12 rounded-full transition-colors duration-300 flex items-center justify-center"
              >
                <i class="fab fa-twitter"></i>
              </a>
            )
          }
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-display text-xl font-bold mb-6">Enlaces Rápidos</h3>
        <ul class="space-y-3">
          <li>
            <a href="#home" class="text-secondary-300 hover:text-primary-400 transition-colors duration-300">
              Inicio
            </a>
          </li>
          <li>
            <a href="#menu" class="text-secondary-300 hover:text-primary-400 transition-colors duration-300">
              Menú
            </a>
          </li>
          <li>
            <a href="#gallery" class="text-secondary-300 hover:text-primary-400 transition-colors duration-300">
              Galería
            </a>
          </li>
          <li>
            <a href="#contact" class="text-secondary-300 hover:text-primary-400 transition-colors duration-300">
              Contacto
            </a>
          </li>
          <li>
            <a href="#contact" class="text-secondary-300 hover:text-primary-400 transition-colors duration-300">
              Reservaciones
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="font-display text-xl font-bold mb-6">Contacto</h3>
        <div class="space-y-4">
          <div class="flex items-start">
            <i class="fas fa-map-marker-alt text-primary-400 mt-1 mr-3"></i>
            <div>
              <p class="text-secondary-300">
                {
                  address && (
                    <p class="text-secondary-300">
                      {address}
                    </p>
                  )
                }
              </p>
            </div>
          </div>
          <div class="flex items-center">
            <i class="fas fa-phone text-primary-400 mr-3"></i>
            <a href="tel:+1234567890" class="text-secondary-300 hover:text-primary-400 transition-colors duration-300">
              {
                phone && (
                  <p class="text-secondary-300">
                    {phone}
                  </p>
                )
              }
            </a>
          </div>
          {
            email && (
              <div class="flex items-center">
                <i class="fas fa-envelope text-primary-400 mr-3"></i>
                <a href="mailto:info@turestaurante.com" class="text-secondary-300 hover:text-primary-400 transition-colors duration-300">
                  {email}
                </a>
              </div>
            )
          }
        </div>
      </div>

      <!-- Hours -->
      {
        (week_hours_1 || week_hours_2 || weekend_hours_1 || weekend_hours_2) && (
        <div>
          <h3 class="font-display text-xl font-bold mb-6">Horarios</h3>
          <div class="space-y-3">
            <div>
              <p class="text-primary-400 font-medium">Lunes - Viernes</p>
              <p class="text-secondary-300 text-sm">{week_hours_1}</p>
              {
                week_hours_2 && (
                  <p class="text-secondary-300 text-sm">{week_hours_2}</p>
                )
              }
            </div>
            <div>
              <p class="text-primary-400 font-medium">Sábados - Domingos</p>
              <p class="text-secondary-300 text-sm">{weekend_hours_1}</p>
              {
                weekend_hours_2 && (
                  <p class="text-secondary-300 text-sm">{weekend_hours_2}</p>
                )
              }
            </div>
          </div>
        </div>
        )
      }

        <!-- Newsletter -->
        <div class="mt-8">
          <h4 class="font-display text-lg font-semibold mb-4">Newsletter</h4>
          <form class="flex">
            <input 
              type="email" 
              placeholder="Tu email"
              class="flex-1 px-4 py-2 bg-secondary-700 border border-secondary-600 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-primary-500 text-white placeholder-secondary-400"
            />
            <button 
              type="submit"
              class="bg-primary-500 hover:bg-primary-600 px-4 py-2 rounded-r-lg transition-colors duration-300"
            >
              <i class="fas fa-paper-plane"></i>
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-secondary-700 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-secondary-400 text-sm">
        © 2025 {name}. Todos los derechos reservados.
      </p>
      <div class="flex space-x-6 mt-4 md:mt-0">
        <a href="#" class="text-secondary-400 hover:text-primary-400 text-sm transition-colors duration-300">
          Política de Privacidad
        </a>
        <a href="#" class="text-secondary-400 hover:text-primary-400 text-sm transition-colors duration-300">
          Términos de Servicio
        </a>
        <a href="#" class="text-secondary-400 hover:text-primary-400 text-sm transition-colors duration-300">
          Cookies
        </a>
      </div>
    </div>
  </div>
</footer>

<script>
  // Newsletter form handling
  document.addEventListener('DOMContentLoaded', function() {
    const newsletterForm = document.querySelector('footer form') as HTMLFormElement;
    const emailInput = newsletterForm.querySelector('input[type="email"]') as HTMLInputElement;

    if (newsletterForm) {
      newsletterForm.addEventListener('submit', function(e: Event) {
        e.preventDefault();
        const email = emailInput.value;
        
        if (email) {
          // Here you would typically send the email to your backend
          console.log('Newsletter signup:', email);
          alert('¡Gracias por suscribirte a nuestro newsletter!');
          (this as HTMLFormElement).reset();
        }
      });
    }
  });
</script>
