---
const whatsappUrl = import.meta.env.PUBLIC_WHATSAPP_URL;
---


<div class="fixed right-6 bottom-6 z-50 flex flex-col gap-4">
    <!-- WhatsApp Button -->
    <a
      href={whatsappUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="bg-green-500 hover:bg-green-600 text-white w-14 h-14 rounded-full shadow-lg transition-all duration-300 hover:scale-110 flex items-center justify-center"
      aria-label="Contactar por WhatsApp"
    >
      <i class="fab fa-whatsapp text-2xl"></i>
    </a>
  </div>