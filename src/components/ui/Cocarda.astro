---
const description = import.meta.env.PUBLIC_DESCRIPTION;
---

{
  description && (
    <div class="cocarda-container">
      <div class="cocarda">
        <div class="cocarda-content">
          {description}
        </div>
        <div class="cocarda-ribbon-left"></div>
        <div class="cocarda-ribbon-right"></div>
      </div>
    </div>
  )
}

<style>
  .cocarda-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    position: relative;
  }

  .cocarda {
    position: relative;
    background: linear-gradient(135deg, #fbb03b 0%, #f9a825 50%, #f57f17 100%);
    color: #1a1a1a;
    padding: 1rem 2.5rem;
    font-weight: 600;
    font-size: 2rem;
    text-align: center;
    box-shadow: 
      0 4px 15px rgba(251, 176, 59, 0.4),
      0 0 20px rgba(251, 176, 59, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    border: 2px solid rgba(255, 215, 0, 0.5);
    border-radius: 8px;
    transform: rotate(-2deg);
    transition: transform 0.3s ease;
    z-index: 10;
    position: relative;
    max-width: 90%;
    margin: 0 auto;
  }

  .cocarda:hover {
    transform: rotate(0deg) scale(1.05);
    box-shadow: 
      0 6px 20px rgba(251, 176, 59, 0.6),
      0 0 30px rgba(251, 176, 59, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.4);
  }

  .cocarda-content {
    position: relative;
    z-index: 2;
    text-shadow: 0 1px 2px rgba(255, 255, 255, 0.5);
    letter-spacing: 0.5px;
  }

  .cocarda-ribbon-left,
  .cocarda-ribbon-right {
    position: absolute;
    width: 0;
    height: 0;
    border-style: solid;
    z-index: 1;
  }

  .cocarda-ribbon-left {
    left: -10px;
    top: 50%;
    transform: translateY(-50%);
    border-width: 15px 10px 15px 0;
    border-color: transparent #f9a825 transparent transparent;
    filter: drop-shadow(-2px 0 3px rgba(0, 0, 0, 0.2));
  }

  .cocarda-ribbon-right {
    right: -10px;
    top: 50%;
    transform: translateY(-50%);
    border-width: 15px 0 15px 10px;
    border-color: transparent transparent transparent #f9a825;
    filter: drop-shadow(2px 0 3px rgba(0, 0, 0, 0.2));
  }

  /* Efecto de brillo animado */
  .cocarda::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    transition: left 0.5s;
  }

  .cocarda:hover::before {
    left: 100%;
  }

  @media (max-width: 768px) {
    .cocarda {
      padding: 0.75rem 1.5rem;
      font-size: 1.5rem;
      transform: rotate(-1deg);
    }
  }
</style>

