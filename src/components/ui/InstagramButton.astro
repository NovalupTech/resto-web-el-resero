---
const instagramUrl = import.meta.env.PUBLIC_INSTAGRAM_URL;
---


<div class="fixed left-6 bottom-6 z-50 flex flex-col gap-4">
    <!-- Instagram Button -->
    <a
        href={instagramUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white w-14 h-14 rounded-full shadow-lg transition-all duration-300 hover:scale-110 flex items-center justify-center"
        aria-label="Seguir en Instagram"
    >
        <i class="fab fa-instagram text-2xl"></i>
    </a>
</div>