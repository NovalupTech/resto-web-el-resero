---
import { menu_buttons, menu_items } from "../../utils/const";
import MenuItems from "./MenuItems.astro";
---

{
    menu_buttons.map(({id, active}) => (
    <div class={`menu-category ${active ? 'active' : ''}`} data-category={id}>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            {
                menu_items.map(({name, description, price}) => (
                    <MenuItems name={name} description={description} price={price} />
                ))
            }
        </div>
    </div>
    ))
}
