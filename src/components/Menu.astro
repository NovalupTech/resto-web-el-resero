<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const buttons = document.querySelectorAll('.menu-category-btn');
    
    // Function to show a specific category
    function showCategory(targetId) {
      // Hide all main categories
      const allCategories = document.querySelectorAll('.menu-category');
      allCategories.forEach(function(cat) {
        cat.style.display = 'none';
        cat.classList.add('hidden');
        cat.classList.remove('active');
      });
      
      // Show target category
      const targetCategory = document.querySelector('.menu-category[data-category="' + targetId + '"]');
      if (targetCategory) {
        targetCategory.style.display = 'block';
        targetCategory.classList.remove('hidden');
        targetCategory.classList.add('active');
      }
    }
    
    // Function to update button states
    function updateButtons(activeButton) {
      buttons.forEach(function(btn) {
        btn.classList.remove('active', 'bg-primary-500', 'text-white');
        btn.classList.add('bg-secondary-200', 'text-secondary-700');
      });
      activeButton.classList.add('active', 'bg-primary-500', 'text-white');
      activeButton.classList.remove('bg-secondary-200', 'text-secondary-700');
    }
    
    // Add click listeners
    buttons.forEach(function(btn) {
      btn.addEventListener('click', function() {
        const targetId = btn.getAttribute('data-category');
        showCategory(targetId);
        updateButtons(btn);
      });
    });
  });
</script>



